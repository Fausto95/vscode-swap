{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "outDir": "out",
      "lib": ["es6"],
      "sourceMap": true,
      "rootDir": "src",
      "strict": true /* enable all strict type-checking options */,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "exclude": ["node_modules", ".vscode-test"]
  }
  